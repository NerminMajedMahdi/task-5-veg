
<% content_for :page_header, @product.name.capitalize %>
<% content_for :page_description, "Product information for #{@product.name}" %>
<div class="container">
  <p id="notice"><%= notice %></p>

  <div class="row">
    <!--<div class="col-sm-6 col-md-4">-->
      <div class="thumbnail">

           <%= image_tag(@product.image_url, class: "img-responsive img-zoom", data_zoom_image: "@product.image_url") %>

             

        <div class="caption">
          <p>
            <strong>Name:</strong>
            <%= @product.name %>
          </p>

          <p>
            <strong>Description:</strong>
            <%= @product.description %>
          </p>

          <p>
            <strong>Colour:</strong>
            <%= @product.colour %>
          </p>

          <p>
            <strong>Price:</strong>
            <%= @product.price %>
          </p>
   <h2><%= number_to_currency(@product.price, :unit => '$') %></h2>
      
<%= form_tag "/payments/create" do %>
        <%= hidden_field_tag(:product_id, @product.id) %>
        <%= render partial: 'shared/stripe_checkout_button' %>
<% end %>

          <p>Average Rating: <div class="rated stars" data-score="<%= @product.average_rating %>"></div> </p>

          <% if signed_in? %>
              <h4>Add a review:</h4>
              <%= form_for([@product, @product.comments.build]) do |f| %>
                  <p>
                    <%= f.label :body, "Comments" %><br>
                    <%= f.text_area :body %>
                  </p>

                  <p>
                  <div class="rating"></div>
                  </p>

                  <p>
                    <%= f.submit "Submit" %>
                  </p>
              <% end %>
  <%= render 'comments' %>
          <% end %>

        


        </div>
      <!--</div>-->
    </div>
  </div>



<%= will_paginate @comments %>



  <%= link_to 'Edit', edit_product_path(@product) %> |
  <%= link_to 'Back', products_path %>


</div>
