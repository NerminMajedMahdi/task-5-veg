<%# @products.each do |product| %>
  <div class="col-sm-2 col-md-4">
    <%= link_to(product) do %>
    <%= image_tag( product.image_url, class:"img-responsive img-zoom1", data_zoom_image: product.image_url, style:'height: 100%; width: 100%; object-fit: contain' ) %>
    <% end %>
<% cache product do %>
    <h2><%= product.name %></h2>
    <p><%= product.description %></p>
    <p><%= product.colour %></p>
    <p><%= product.price %></p>

    <%= link_to 'Show', product, class:'btn btn-default' %>
 <% if signed_in? && current_user.admin? %>
    <%= link_to 'Edit', edit_product_path(product),  class:'btn btn-warning' %>
    <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' },  class:'btn btn-danger' %>
<% end %>
  </div><!-- /col -->
<% end %>

















